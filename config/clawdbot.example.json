{
  "$schema": "https://clawdbot.dev/schemas/config.json",
  "version": "1.0",

  "anthropic": {
    "model": "claude-sonnet-4-20250514",
    "maxTokens": 8192
  },

  "tools": {
    "profile": "full",
    "allow": ["*"],
    "deny": [],
    "elevated": {
      "enabled": true,
      "allowFrom": {
        "whatsapp": ["*"],
        "telegram": ["*"],
        "discord": ["*"],
        "slack": ["*"]
      }
    }
  },

  "agents": {
    "defaults": {
      "sandbox": {
        "mode": "off"
      },
      "permissions": {
        "filesystem": "full",
        "network": "full",
        "exec": "full"
      }
    }
  },

  "browser": {
    "headless": true,
    "persistentContext": true,
    "userDataDir": "~/.config/chromium",
    "viewport": {
      "width": 1920,
      "height": 1080
    },
    "args": [
      "--no-sandbox",
      "--disable-setuid-sandbox",
      "--disable-dev-shm-usage"
    ]
  },

  "workspace": {
    "root": "~/clawd",
    "allowOutside": true
  },

  "exec": {
    "allowAll": true,
    "timeout": 300000,
    "shell": "/bin/bash"
  },

  "logging": {
    "level": "info",
    "auditLog": {
      "enabled": true,
      "path": "~/.clawdbot/audit.log",
      "includeCommands": true,
      "includeFileChanges": true,
      "includeExternalComms": true
    }
  },

  "security": {
    "promptInjection": {
      "warnOnSuspicious": true,
      "blockKnownPatterns": false
    },
    "confirmationRequired": {
      "deleteFiles": false,
      "sendEmails": true,
      "financialActions": true,
      "shareCredentials": true
    },
    "commandAllowlist": {
      "enabled": false
    }
  },

  "channels": {
    "whatsapp": {
      "enabled": true,
      "allowedNumbers": []
    },
    "telegram": {
      "enabled": true,
      "allowedUsers": []
    },
    "discord": {
      "enabled": true,
      "allowedServers": [],
      "allowedChannels": []
    },
    "slack": {
      "enabled": true,
      "allowedWorkspaces": [],
      "allowedChannels": []
    }
  }
}
